{
  "name": "@fubs/source",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "build:ci": "yarn nx affected -t build --base=origin/main --head=HEAD --parallel=10 --verbose",
    "test:ci": "yarn nx affected -t test --base=origin/main --head=HEAD --parallel=10 --verbose",
    "lint:ci": "yarn nx affected -t lint --base=origin/main --head=HEAD --parallel=10 --verbose",
    "db:sugarfoot:studio": "cd apps/sugarfoot && npx prisma studio",
    "db:sugarfoot:migrate": "cd apps/sugarfoot && npx prisma migrate dev",
    "db:sugarfoot:migrate:deploy": "cd apps/sugarfoot && npx prisma migrate deploy",
    "db:sugarfoot:seed": "cd apps/sugarfoot && npx prisma db seed",
    "db:sugarfoot:generate": "cd apps/sugarfoot && npx prisma generate",
    "docker:sugarfoot:build": "docker build -t fubs-sugarfoot -f apps/sugarfoot/Dockerfile .",
    "docker:sugarfoot:up": "docker-compose up sugarfoot-db -d && docker run --rm -p 3000:3000 --network fubs_microservices-network -e DATABASE_URL=postgresql://postgres:postgres@sugarfoot-db:5432/sugarfoot_db?schema=public -e NODE_ENV=production -e JWT_SECRET=your-secret-key-for-development -e JWT_EXPIRES_IN=7d fubs-sugarfoot",
    "db:koda:studio": "cd apps/koda && npx prisma studio",
    "db:koda:migrate": "cd apps/koda && npx prisma migrate dev",
    "db:koda:migrate:deploy": "cd apps/koda && npx prisma migrate deploy",
    "db:koda:seed": "cd apps/koda && npx prisma db seed",
    "db:koda:generate": "cd apps/koda && npx prisma generate",
    "docker:koda:build": "docker build -t fubs-koda -f apps/koda/Dockerfile .",
    "docker:koda:up": "docker-compose up koda-db -d && docker run --rm -p 4000:4000 --network fubs_microservices-network -e DATABASE_URL=postgresql://postgres:postgres@koda-db:5432/koda_db?schema=public -e NODE_ENV=production -e JWT_SECRET=your-secret-key-for-development -e JWT_EXPIRES_IN=7d fubs-koda"
  },
  "private": true,
  "dependencies": {
    "@nestjs/common": "^11.1.3",
    "@nestjs/core": "^11.1.3",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/microservices": "^11.1.3",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.1.3",
    "@nestjs/schedule": "^6.0.0",
    "@nestjs/swagger": "^11.2.0",
    "@nestjs/throttler": "^6.4.0",
    "@prisma/client": "^6.13.0",
    "amqp-connection-manager": "^4.1.14",
    "amqplib": "^0.10.8",
    "axios": "^1.6.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "prisma": "^6.13.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.8.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.0",
    "@nx/eslint": "21.2.1",
    "@nx/eslint-plugin": "21.2.1",
    "@nx/jest": "21.2.1",
    "@nx/js": "21.2.1",
    "@nx/nest": "21.2.1",
    "@nx/node": "21.2.1",
    "@nx/web": "21.2.1",
    "@nx/webpack": "21.2.1",
    "@nx/workspace": "21.2.1",
    "@swc-node/register": "~1.9.1",
    "@swc/core": "~1.5.7",
    "@swc/helpers": "~0.5.11",
    "@swc/jest": "~0.2.36",
    "@types/jest": "^29.5.12",
    "@types/node": "~18.16.9",
    "@types/passport-jwt": "^4.0.1",
    "eslint": "^9.8.0",
    "eslint-config-prettier": "^10.0.0",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "jsonc-eslint-parser": "^2.1.0",
    "nx": "21.2.1",
    "prettier": "^2.6.2",
    "ts-jest": "^29.1.0",
    "ts-node": "10.9.1",
    "tslib": "^2.3.0",
    "typescript": "~5.8.2",
    "typescript-eslint": "^8.29.0",
    "webpack-cli": "^5.1.4"
  },
  "sugarfoot": [
    "apps/*",
    "libs/*"
  ],
  "koda": [
    "apps/*",
    "libs/*"
  ]
}
