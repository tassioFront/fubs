# Workspace-level environment variables
NODE_ENV=production

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@workspaces-db:5432/workspaces_db?schema=public

# JWT Configuration
JWT_SECRET=your-secret-key-for-development
JWT_EXPIRES_IN=7d

# Service URLs for inter-service communication
PROJECTS_SERVICE_URL=http://localhost:3000
USERS_SERVICE_URL=http://localhost:8000

# API Documentation Configuration
API_TITLE=Workspaces Service API
API_DESCRIPTION=API for managing workspaces, projects, and team members
API_VERSION=1.0.0

# Global logging level
LOG_LEVEL=info
