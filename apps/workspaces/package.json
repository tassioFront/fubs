{
  "name": "@fubs/workspaces",
  "version": "0.0.1",
  "private": true,
  "nx": {
    "targets": {
      "build": {
        "executor": "nx:run-commands",
        "options": {
          "commands": [
            "npx prisma generate",
            "npx tsc --project tsconfig.app.json --noEmit",
            "webpack-cli build node-env=production"
          ],
          "parallel": false,
          "cwd": "apps/workspaces"
        },
        "configurations": {
          "development": {
            "commands": [
              "npx prisma generate",
              "npx tsc --project tsconfig.app.json --noEmit",
              "cd apps/workspaces && webpack-cli build node-env=development"
            ],
            "parallel": false,
            "cwd": "apps/workspaces"
          }
        }
      },
      "serve": {
        "continuous": true,
        "executor": "@nx/js:node",
        "defaultConfiguration": "development",
        "dependsOn": [
          "build"
        ],
        "options": {
          "buildTarget": "@fubs/workspaces:build",
          "runBuildTargetDependencies": false
        },
        "configurations": {
          "development": {
            "buildTarget": "@fubs/workspaces:build:development"
          },
          "production": {
            "buildTarget": "@fubs/workspaces:build:production"
          }
        }
      },
      "test": {
        "options": {
          "passWithNoTests": true
        }
      },
      "docker-build": {
        "dependsOn": [
          "build"
        ],
        "command": "docker build -f apps/workspaces/Dockerfile . -t fubs-workspaces"
      }
    }
  }
}
