{
  "name": "@fubs/tasks",
  "version": "0.0.1",
  "private": true,
  "nx": {
    "targets": {
      "build": {
        "executor": "nx:run-commands",
        "dependsOn": ["@fubs:shared:build"],
        "options": {
          "command": "webpack-cli build",
          "args": [
            "node-env=production"
          ]
        },
        "configurations": {
          "development": {
            "args": [
              "node-env=development"
            ]
          }
        }
      },
      "serve": {
        "continuous": true,
        "executor": "@nx/js:node",
        "defaultConfiguration": "development",
        "dependsOn": [
          "build"
        ],
        "options": {
          "buildTarget": "@fubs/tasks:build",
          "runBuildTargetDependencies": false
        },
        "configurations": {
          "production": {
            "dependsOn": ["@fubs:shared:build"],
            "commands": [
              "echo 'Building for production...'",
              "npx prisma generate",
              "webpack-cli build --mode=production"
            ],
            "parallel": false,
            "cwd": "apps/workspaces"
          }
        }
      },
      "test": {
        "options": {
          "passWithNoTests": true
        }
      }
    }
  }
}
