{
  "name": "tasks",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/tasks/src",
  "tags": ["type:app"],
  "targets": {
      "prisma-generate": {
        "executor": "nx:run-commands",
        "options": {
          "commands": [
            "npx prisma generate"
          ],
          "cwd": "apps/tasks"
        }
      },
      "build": {
        "executor": "nx:run-commands",
        "dependsOn": [
          "@fubs/shared:build",
          "prisma-generate"
        ],
        "options": {
          "commands": [
            "echo 'Building for development...'",
            "npx tsc --project tsconfig.app.json --noEmit",
            "webpack-cli build node-env=development"
          ],
          "parallel": false,
          "cwd": "apps/tasks"
        },
        "configurations": {
          "production": {
            "commands": [
              "echo 'Building for production...'",
              "webpack-cli build --mode=production"
            ],
            "parallel": false,
            "cwd": "apps/tasks"
          }
        }
      },
       "serve": {
        "executor": "@nx/js:node",
        "defaultConfiguration": "development",
        "dependsOn": [
          "build"
        ],
        "options": {
          "buildTarget": "build",
          "watch": true,
          "runBuildTargetDependencies": false
        },
        "configurations": {
          "development": {
            "buildTarget": "build",
            "runBuildTargetDependencies": true,
            "watch": true
          },
          "production": {
            "buildTarget": "build:production"
          }
        }
      },
      "test": {
        "options": {
          "passWithNoTests": true
        }
      },
      "docker-build": {
        "executor": "nx:run-commands",
        "options": {
          "commands": [
            "docker build -t fubs-tasks -f apps/tasks/Dockerfile ."
          ]
        }
      }
    }
}
