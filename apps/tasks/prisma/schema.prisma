generator client {
  provider = "prisma-client-js"
  output   = "../../../node_modules/@prisma/client-tasks"
  binaryTargets = ["native", "linux-arm64-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum TaskStatus {
  TODO
  IN_PROGRESS
  DONE
}

enum TaskPriority {
  LOW
  MEDIUM
  HIGH
}

model Task {
  id          String     @id @default(uuid())
  title       String
  description String?
  status      TaskStatus @default(TODO)
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  priority TaskPriority @default(MEDIUM)
  dueDate  DateTime?

  projectId     String
  project       Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  createdBy     String
  createdByUser User    @relation("CreatedByUser", fields: [createdBy], references: [id], onDelete: Cascade)
  assignedTo    String?
  assignedUser  User?   @relation("AssignedUser", fields: [assignedTo], references: [id], onDelete: SetNull)

  @@map("tasks")
}

model User {
  id            String @id @default(uuid())
  assignedTasks Task[] @relation("AssignedUser")
  createdTasks  Task[] @relation("CreatedByUser")

  @@map("users")
}

model Project {
  id    String @id
  tasks Task[]

  @@map("projects")
}

model Workspace {
  id         String   @id @default(uuid())
  members    WorkspaceMember[]
  @@map("workspaces")
}

model WorkspaceMember {
  id        String   @id @default(uuid())
  userId    String
  workspace Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  workspaceId String

  @@map("workspace_members")
}
