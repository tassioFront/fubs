{
  "name": "stitch",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/stitch/src",
  "tags": ["type:app"],
  "targets": {
    "prisma-generate": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "npx prisma generate"
        ],
        "cwd": "apps/stitch"
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "dependsOn": [
        "@fubs/shared:build",
        "prisma-generate"
      ],
      "options": {
        "commands": [
          "echo 'Building for development...'",
          "npx tsc --project tsconfig.app.json --noEmit",
          "webpack-cli build node-env=development"
        ],
        "parallel": false,
        "cwd": "apps/stitch"
      },
      "configurations": {
        "production": {
          "commands": [
            "echo 'Building for production...'",
            "webpack-cli build --mode=production"
          ],
          "parallel": false,
          "cwd": "apps/stitch"
        }
      }
    },
    "serve": {
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "dependsOn": [
        "build"
      ],
      "options": {
        "buildTarget": "build",
        "watch": true,
        "runBuildTargetDependencies": true
      },
      "configurations": {
        "development": {
          "buildTarget": "build",
          "watch": true,
          "runBuildTargetDependencies": true
        },
        "production": {
          "buildTarget": "build:production"
        }
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "options": {
        "jestConfig": "apps/stitch/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "docker-build": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "docker build -t fubs-stitch -f apps/stitch/Dockerfile ."
        ]
      }
    }
  }
}
